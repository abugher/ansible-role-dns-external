#!/bin/bash

read neuron_external_ip < /etc/neuron.neuronpointer.net

ip_regex='^[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}$'

fail() {
  echo "Error:  ${2}" >&2
  exit $1
}

err_invalid=1
err_append=2
err_sed_hosts=3
err_service_reload=4
err_sed_conf=5
err_service_restart=6

if ! echo $neuron_external_ip | grep -qE $ip_regex; then
  fail $err_invalid "Invalid IP address:  ${neuron_external_ip}"
fi

if ! grep -qF ' neuron.neuronpointer.net' /etc/hosts; then
  echo ' neuron.neuronpointer.net' >> /etc/hosts \
  || fail $err_append 'Failed to append a line to /etc/hosts.'
fi

line="${neuron_external_ip}"' neuron\.neuronpointer\.net'
if ! grep -qF "^${line}$" /etc/hosts; then
  sed -i -E \
    's/.* neuron\.neuronpointer\.net.*$/'"${line}"'/' \
    /etc/hosts \
  || fail $err_sed_hosts "sed failed:  ${?}"
  /usr/sbin/service dnsmasq force-reload \
  || fail $err_service_reload "service reload failed:  ${?}"
fi
